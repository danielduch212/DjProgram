<UserControl x:Class="DjProgram1.Controls.KnobToCut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjProgram1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70">
    <!-- Zagnieżdżenie Canvas wewnątrz Grid lub innego panelu -->
    <Grid>
        <Canvas MouseDown="Canvas_MouseDown" 
        MouseMove="Canvas_MouseMove" 
        MouseUp="Canvas_MouseUp">
            <!-- Koło pokrętła -->
            <Ellipse Width="60" Height="60" Fill="Black" 
                 Canvas.Left="5" Canvas.Top="5"/>

            <!-- Kontener na kropki -->
            <Canvas x:Name="DotsCanvas" Width="70" Height="70">
                <!-- Tutaj umieść elementy wewnątrz DotsCanvas, jeśli są potrzebne -->
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
