<Window x:Class="DjProgram1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DjProgram1"
        mc:Ignorable="d"
        Title="DJProgram" Height="800" Width="800">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="180" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="550"/>
            



            <!-- Drugi wiersz na resztę dostępnej przestrzeni -->
        </Grid.RowDefinitions>
        
        
        <StackPanel Grid.Row="0" >
            <!-- Przycisk "Wgraj Pliki" po lewej stronie -->
            <Button Margin="10,5,10,0" Width="100" Click="buttonUploadFiles_Click">
                <StackPanel >
                    <TextBlock Text="Wgraj Pliki" />
                    
                </StackPanel>
            </Button>
        </StackPanel>


        <Border BorderBrush="Black" BorderThickness="2" Padding="5" Grid.Row="1" Margin="0,0,0,0">
            <ListBox Name="songList" MouseWheel="ListBox_MouseWheel" Height="200" Width="767"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.PanningMode="Both"
             ScrollViewer.PanningDeceleration="0.5">
                <!-- Dodaj więcej elementów listy -->
            </ListBox>
        </Border>
        <!-- Panel przycisków -->
        <StackPanel Grid.Row="2">
            <Button Margin="10,3,-500,0" Width="100" Click="buttonUpload_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Wgraj" />
                </StackPanel>
            </Button>
        </StackPanel>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Name="bpmTextBox1" Text="BPM: " Margin="0,100,0,0" HorizontalAlignment="Center" />
                <TextBlock Name ="songOnDeck1" Text="---------------" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <Button Width="50" Height="50" Margin="-80,10,0,0" HorizontalAlignment="Center" Click="playButton1_Click">
                    <Image Source="C:\Users\Janusz\Desktop\playButton.png" />
                </Button>
                <Button Width="50" Height="50" Margin="55,-50,0,0" HorizontalAlignment="Center" Click="pauseButton1_Click">
                    <Image Source="C:\Users\Janusz\Desktop\ikonaPause.jpg" />
                </Button>
                <Canvas Name="canvas1" Width="350" Height="100" Background="White" Margin="0,90,0,0"/>
                

                <!-- Dodaj swoje pozostałe elementy -->
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock x:Name="bpmTextBox2" Text="BPM: " Margin="0,100,0,0" HorizontalAlignment="Center" />
                <TextBlock Name ="songOnDeck2" Text="---------------" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <Button Width="50" Height="50" Margin="-55,10,0,0" HorizontalAlignment="Center" Click="playButton2_Click">
                    <Image Source="C:\Users\Janusz\Desktop\playButton.png" />
                </Button>
                <Button Width="50" Height="50" Margin="55,-50,0,0" HorizontalAlignment="Center" Click="pauseButton2_Click">
                    <Image Source="C:\Users\Janusz\Desktop\ikonaPause.jpg" />
                </Button>
                <Canvas x:Name="canvas2" Width="350" Height="100" Background="White" Margin="0,100,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
